<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_notifications"
        app:route="notifications"
        android:name="com.example.testapp.ui.notifications.NotificationsFragment"
        android:label="Профиль">
        <action
            android:id="@+id/action_navigation_notifications_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.testapp.ui.login.LoginFragment"
        android:label="Авторизация">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_loginFragment_to_navigation_notifications"
            app:destination="@id/navigation_notifications"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.testapp.ui.register.RegisterFragment"
        android:label="Регистрация" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_registerFragment_to_navigation_notifications"
            app:destination="@id/navigation_notifications"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/navigation_home"
        app:route="home"
        android:name="com.example.testapp.ui.home.HomeFragment"
        android:label="Список" >
        <action
            android:id="@+id/action_navigation_home_to_newsDetailFragment"
            app:destination="@id/newsDetailFragment"
            app:popUpTo="@id/newsDetailFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/navigation_dashboard"
        app:route="dashboard"
        android:name="com.example.testapp.ui.dashboard.DashboardFragment"
        android:label="Стоимость" >
        <action
            android:id="@+id/action_navigation_dashboard_to_newsDetailFragment2"
            app:destination="@id/newsDetailFragment"
            app:popUpTo="@id/newsDetailFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/newsDetailFragment"
        android:name="com.example.testapp.ui.home.NewsDetail.NewsDetailFragment"
        android:label="NewsDetailFragment" >
        <action
            android:id="@+id/action_newsDetailFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_newsDetailFragment_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_newsDetailFragment_to_navigation_notifications"
            app:destination="@id/navigation_notifications"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>